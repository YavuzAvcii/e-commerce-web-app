<%- layout('./layouts/boilerplate') %>

<link rel="stylesheet" href="/stylesheets/show.css" />
<div class="card">
  <div class="row">
    <div class="col-6">
      <img src="<%= product.imageUrl %>" class="card-img-top" alt="..." />
      <div class="card-body">
        <h5 class="card-title"><%= product.title %></h5>
        <p class="card-text">
          Some quick example text to build on the card title and make up the
          bulk of the card's content.
        </p>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">Seller: <%= product.seller.username%></li>
        <li class="list-group-item">Price: <b><%= product.price %>$</b></li>
      </ul>
      <div class="card-body d-flex flex-row">
        <form action="/products/chart/<%= product._id%>" method="POST">
          <button class="btn btn-primary">Add to your chart</button>
        </form>
      </div>
      <% if (currentUser && currentUser._id === product.seller._id.valueOf()) {
      %>
      <div class="card-body d-flex flex-row">
        <form
          action="/products/<%= product._id %>?_method=DELETE"
          method="POST"
        >
          <button class="btn btn-danger me-3" type="submit">Delete</button>
        </form>
        <a href="/products/<%= product._id %>/edit"
          ><button class="btn btn-warning">Edit</button></a
        >
      </div>
      <% } %>
    </div>
    <div class="col-6">
      <%if (currentUser) {%>
      <form action="/products/<%=product.id%>/reviews" method="POST">
        <label for="rating">Rate form 1 to 5</label>
        <input type="range" min="1" max="5" name="rating" id="rating" />
        <label for="text">review</label>
        <input type="text" name="text" id="text" />
        <button class="btn btn-primary">submit</button>
      </form>
      <%}%> <% for (let review of product.reviews) { %>
      <div class="card">
        <div class="card-body">
          <h5 class="card-title"><%=review.author.username%></h5>
          <p class="card-text"><%= review.text %></p>
          <a href="#" class="btn btn-primary">Go somewhere</a>
        </div>
      </div>
      <%}%>
    </div>
  </div>
</div>
