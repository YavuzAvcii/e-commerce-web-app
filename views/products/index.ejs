<%- layout('./layouts/boilerplate.ejs') %>

<h1>All Products</h1>
<% for (let product of products) { %>
<div class="card mb-3">
  <div class="row">
    <div class="col-md-4">
      <img
        src="<%= product.image %>"
        class="img-fluid rounded-start"
        alt="..."
      />
    </div>
    <div class="col-md-8">
      <div class="card-body">
        <h5 class="card-title"><%= product.title %></h5>
        <p class="card-text">
          <small class="text-body-secondary"
            >seller: <%= product.seller %></small
          >
        </p>
        <b class="mb-3 card-text"><%= product.price %>$</b>
        <a class="d-block mt-3" href="/products/<%= product._id %>"
          ><button class="btn btn-info">More Info</button></a
        >
      </div>
    </div>
  </div>
</div>
<% } %>
